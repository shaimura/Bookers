<header>
	<h1>Books</h1>
</header>

<main>
	<thead>
		<table>
			<tr>
		      <th>タイトル</th>
		      <th>投稿内容</th>
		      <th colspan="3"></th>
		    </tr>
		    <% @books.each do |b| %>
		    <tr>
	          <td>
	    	      <%= b.title %>
	          </td>
	          <td>
	    	      <%= b.body %>
	          </td>
	          <td>
	         	 <%= link_to '詳細', book_path(b),class: 'show_#{b.id}' %>
	          </td>
	          <td>
	          	<%= link_to '編集', book_path(b), class: 'edit_#{b.id}' %>
	          </td>
	          <td>
	          	<%= link_to '削除', book_path(b), method: :delete, data:{confirm:"本当に削除しますか？"}, class: 'destroy_#{b.id}' %>
	          </td>
	         </tr>
	        <% end %>
	    </table>
	</thead>

	<section>
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>

		<h4>タイトル</h4>
		<%= f.text_field :title, class: "book_title" %>
		<h4>投稿内容</h4>
		<%= f.text_area :body, class: "book_body" %>
		<h4><%= f.submit "投稿" %></h4>
		<% end %>
	</section>

</main>
